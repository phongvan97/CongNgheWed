<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:id="@+id/dai"
            android:layout_centerHorizontal="true"
            android:layout_width="350dp"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/img_daily_resuilt1"
                android:layout_marginLeft="50dp"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                />
            <ImageView
                android:id="@+id/img_daily_resuilt2"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <TextView
            android:gravity="center"
            android:id="@+id/txt_daily_title"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/dai"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="13131313"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
        <ScrollView
            android:layout_below="@+id/txt_daily_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                android:id="@+id/txt_daily_result"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="132132"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />
                <TextView
                android:id="@+id/txt_daily_result1"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/txt_daily_result"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="132132"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            </RelativeLayout>

        </ScrollView>




    </RelativeLayout>
</layout>
