<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/dai"
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="150dp">
        <ImageView
            android:background="@drawable/test"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_centerHorizontal="true"
            android:background="@drawable/test"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
        <ImageView
            android:background="@drawable/backcard"
            android:layout_alignParentRight="true"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <TextView
        android:id="@+id/txt_daily_title"
        android:layout_marginTop="25dp"
        android:layout_below="@id/dai"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_daily_result"
        android:layout_marginTop="50dp"
        android:layout_below="@id/txt_daily_title"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />


</RelativeLayout>