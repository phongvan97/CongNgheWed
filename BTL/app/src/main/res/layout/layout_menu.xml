<?xml version="1.0" encoding="utf-8"?>
<layout
    tools:context="com.example.phong.btl.MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:background="#ECDCCD"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="@drawable/boilogo"
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <TextView
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/img"
            android:id="@+id/name"
            android:text="aaaaaaaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#1F1B17"
            android:id="@+id/txt_title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:text="Hãy Chọn Một Mục Để Bói"
            android:layout_below="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.CardView

            app:cardCornerRadius="25dp"
            android:id="@+id/card_ty"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_title"
            android:layout_width="200dp"
            android:layout_height="60dp">
            <TextView
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/btn_tinhyeu"
                android:gravity="center"
                android:textSize="25sp"
                android:text="Thời Vận"
                android:layout_width="200dp"
                android:layout_height="60dp" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:cardCornerRadius="25dp"
            android:layout_marginTop="10dp"
            android:id="@+id/card_hn"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/card_ty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"
                android:id="@+id/btn_hangngay"
                android:textSize="25sp"
                android:textAllCaps="false"
                android:text="Hàng Ngày"
                android:layout_width="200dp"
                android:layout_height="60dp" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card_LS"
            app:cardCornerRadius="25dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/card_hn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/btn_LS"
                android:textSize="25sp"
                android:textAllCaps="false"
                android:text="Lịch Sử"
                android:layout_width="200dp"
                android:layout_height="60dp" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</layout>

